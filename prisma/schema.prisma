// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Member {
    id          Int       @id @default(autoincrement())
    active      Boolean
    name        String    @unique
    password    String
    fullName    String
    phone       String
    address     String
    description String
    createdDate Int
    lastOnline  Int
    posts       Post[]
    stars       Star[]
    comments    Comment[]

    @@map("member")
}

model Post {
    id          Int       @id @default(autoincrement())
    active      Boolean
    memberId    Int
    member      Member    @relation(fields: [memberId], references: [id])
    description String
    lastUpdate  Int
    createdDate Int
    stars       Star[]
    comments    Comment[]

    @@map("post")
}

model Star {
    member      Member @relation(fields: [memberId], references: [id])
    post        Post   @relation(fields: [postId], references: [id])
    memberId    Int
    postId      Int
    createdDate Int

    @@id([memberId, postId])
    @@map("star")
}

model Comment {
    id          Int    @id @default(autoincrement())
    member      Member @relation(fields: [memberId], references: [id])
    post        Post   @relation(fields: [postId], references: [id])
    memberId    Int
    postId      Int
    parentId    Int
    description String
    lastUpdate  Int
    createdDate Int

    @@map("comment")
}
